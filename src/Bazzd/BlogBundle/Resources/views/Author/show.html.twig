{% extends '::base.html.twig' %}
{% block title %}{{ entity.name }}{% endblock %}

{% block body -%}
    <h1>Author</h1>

    <table class="table record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="list-group record_actions">
    <li class="list-group-item">
        <a href="{{ path('author') }}">
            Back to the list
        </a>
    </li>
    <li class="list-group-item">
        <a href="{{ path('author_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li class="list-group-item">{{ form(delete_form) }}</li>
</ul>
{% endblock %}
